@model Domain.Entities.ShopCart

<div class="navbar-right">
    @Html.ActionLink("Корзина", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery}, new { @class = "btn btn-default navbar-btn" })
</div>

<div class="navbar-text navbar-right">
    <b>Ваша корзина</b>
    Заказано:
    @Model.Lines.Sum(x =>x.Quantity) ,
    Сумма:
    @Model.ComputeTotalValue().ToString("# грн")
</div>