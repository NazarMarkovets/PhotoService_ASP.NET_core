@using WebUI.Models

@model PhotosListViewModel



@{
    ViewBag.Title = "List";
}

@foreach (var photo in Model.Photos)
{
    <div>
        <h5 align="center">@photo.Name - для формата:@photo.PhotoFormat</h5>
        <h5>@photo.ColorType</h5>
        <div class="description">@photo.Description</div>
        <h4 align="center">@photo.Price.ToString("# грн")</h4>
    </div>
    <hr />
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x}))
</div>



